{
  "version": 1,
  "include": ["/*"],
  "exclude": [
    "/assets/*",
    "/*.css",
    "/*.js",
    "/*.webp",
    "/*.jpg",
    "/*.png",
    "/*.svg",
    "/*.ico",
    "/*.json",
    "/*.txt"
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html",
      "status": 200
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1",
      "status": 200
    },
    {
      "src": ".*",
      "dest": "/index.html",
      "status": 200
    }
  ]
} 